#include<stdio.h>
#include<string.h>
void main() 
{
    char str[100];
    int i;
    printf("Enter a string: ");
    scanf("%[^\n]s",str);
    for (i=0;str[i]!='\0';i++) 
    {
        printf("%c\n",str[i]);
    }
}

#include<stdio.h>
#include<string.h>
void main() 
{
    char str[100];
    int i;
    printf("Enter a string: ");
    scanf("%s",str);
    int len =strlen(str);
    
    printf("reverse\n");
    for(i=len-1;str[i]!='\0';i--)
    {
        printf("%c\n",str[i]);
    }
}

#include<stdio.h>
#include<string.h>
void main()
{
    char str[100];
    int i, count = 1;
    printf("Enter a string: ");
    scanf("%[^\n]s",str);
    for (i = 0; str[i] != '\0'; i++)
    {
        if (str[i] == ' ') count++;
    }
    printf("Total number of words: %d\n", count);
}

#include<stdio.h>
#include<string.h>
void main() 
{
    char s[100],t[100];
    int i,f=1;
    printf("Enter first string: ");
    scanf("%s",s);
    printf("Enter second string: ");
    scanf("%s",t);
    for(i=0;s[i]!='\0'||t[i]!='\0';i++)
    {
        if(s[i]!=t[i])
        {
            f=0;
            break;
        }
    }
    if(f)
        printf("Strings are equal.\n");
    else
        printf("Strings are different.\n");
}

#include<stdio.h>
#include<string.h>
void main()
{
    char s[100];
    int i,a=0,d=0,g=0;
    printf("Enter a string: ");
    scanf("%[^\n]s",s);
    for(i=0;s[i]!='\0';i++) 
    {
        if((s[i]>='A'&&s[i]<='Z')||(s[i]>='a'&&s[i]<='z'))
            a++;
        else if(s[i]>='0'&&s[i]<='9')
            d++;
        else
            g++;
    }
    printf("Total Alphabets: %d\n",a);
    printf("Total Digits: %d\n",d);
    printf("Total Special Characters: %d\n",g);
}

#include<stdio.h>
#include<string.h>
void main()
{
    char s[100],ch;
    int i,v=0,c=0;
    printf("Enter a string: ");
    scanf("%s",s);
    for(i=0;s[i]!='\0';i++) 
    {
        ch=s[i];
        if (ch>='A'&&ch<='Z') 
        {
            ch+= 32;
        }
        if(ch >= 'a' && ch <= 'z') 
        {
            if(ch=='a'||ch=='e'||ch=='i'||ch=='o'||ch=='u')
                v++;
            else
                c++;
        }
    }
    printf("Total Vowels: %d\n",v);
    printf("Total Consonants: %d\n",c);
}
