#include<stdio.h>
#include<string.h>
void main() 
{
    char str[100];
    int i;
    printf("Enter a string: ");
    scanf("%[^\n]s",str);
    for (i=0;str[i]!='\0';i++) 
    {
        printf("%c\n",str[i]);
    }
}

#include<stdio.h>
#include<string.h>
void main() 
{
    char str[100];
    int i;
    printf("Enter a string: ");
    scanf("%s",str);
    int len =strlen(str);
    
    printf("reverse\n");
    for(i=len-1;str[i]!='\0';i--)
    {
        printf("%c\n",str[i]);
    }
}

#include<stdio.h>
#include<string.h>
void main()
{
    char str[100];
    int i, count = 1;
    printf("Enter a string: ");
    scanf("%[^\n]s",str);
    for (i = 0; str[i] != '\0'; i++)
    {
        if (str[i] == ' ') count++;
    }
    printf("Total number of words: %d\n", count);
}
