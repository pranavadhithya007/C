#include<stdio.h>
#include<string.h>
void main() 
{
    char str[100];
    int i;
    printf("Enter a string: ");
    scanf("%[^\n]s",str);
    for (i=0;str[i]!='\0';i++) 
    {
        printf("%c\n",str[i]);
    }
}

#include<stdio.h>
#include<string.h>
void main() 
{
    char str[100];
    int i;
    printf("Enter a string: ");
    scanf("%s",str);
    int len =strlen(str);
    
    printf("reverse\n");
    for(i=len-1;str[i]!='\0';i--)
    {
        printf("%c\n",str[i]);
    }
}

#include<stdio.h>
#include<string.h>
void main()
{
    char str[100];
    int i, count = 1;
    printf("Enter a string: ");
    scanf("%[^\n]s",str);
    for (i = 0; str[i] != '\0'; i++)
    {
        if (str[i] == ' ') count++;
    }
    printf("Total number of words: %d\n", count);
}

#include<stdio.h>
#include<string.h>
void main() 
{
    char s[100],t[100];
    int i,f=1;
    printf("Enter first string: ");
    scanf("%s",s);
    printf("Enter second string: ");
    scanf("%s",t);
    for(i=0;s[i]!='\0'||t[i]!='\0';i++)
    {
        if(s[i]!=t[i])
        {
            f=0;
            break;
        }
    }
    if(f)
        printf("Strings are equal.\n");
    else
        printf("Strings are different.\n");
}

#include<stdio.h>
#include<string.h>
void main()
{
    char s[100];
    int i,a=0,d=0,g=0;
    printf("Enter a string: ");
    scanf("%[^\n]s",s);
    for(i=0;s[i]!='\0';i++) 
    {
        if((s[i]>='A'&&s[i]<='Z')||(s[i]>='a'&&s[i]<='z'))
            a++;
        else if(s[i]>='0'&&s[i]<='9')
            d++;
        else
            g++;
    }
    printf("Total Alphabets: %d\n",a);
    printf("Total Digits: %d\n",d);
    printf("Total Special Characters: %d\n",g);
}

#include<stdio.h>
#include<string.h>
void main()
{
    char s[100],ch;
    int i,v=0,c=0;
    printf("Enter a string: ");
    scanf("%s",s);
    for(i=0;s[i]!='\0';i++) 
    {
        ch=s[i];
        if (ch>='A'&&ch<='Z') 
        {
            ch+= 32;
        }
        if(ch >= 'a' && ch <= 'z') 
        {
            if(ch=='a'||ch=='e'||ch=='i'||ch=='o'||ch=='u')
                v++;
            else
                c++;
        }
    }
    printf("Total Vowels: %d\n",v);
    printf("Total Consonants: %d\n",c);
}

#include <stdio.h>
#include <string.h>
void main() 
{
    char str[100];
    int i, maxCount = 0, freq[256] = {0};
    char maxChar;
    printf("Enter a string: ");
    scanf("%[^\n]s",str);
    for (i = 0; str[i] != '\0'; i++)
    {
        freq[(unsigned char)str[i]]++;
    }
    for (i = 0; str[i] != '\0'; i++) 
    {
        if (freq[(unsigned char)str[i]] > maxCount)
        {
            maxCount = freq[(unsigned char)str[i]];
            maxChar = str[i];
        }
    }
    printf("Maximum occurring character: %c (appears %d times)\n", maxChar, maxCount);
}

#include <stdio.h>
#include <string.h>
void main()
{
    char str[100], substr[100];
    int start, length, i;
    printf("Enter the main string: ");
    scanf("%s",str);
    printf("Enter the starting index: ");
    scanf("%d", &start);
    printf("Enter the length of the substring: ");
    scanf("%d", &length);
    for (i = 0; i < length && str[start + i] != '\0'; i++) 
    {
        substr[i] = str[start + i];
    }
    substr[i] = '\0';
    printf("Extracted substring: %s\n", substr);
}

#include <stdio.h>
#include<string.h>
void main() 
{
    char str[100];
    int i;
    printf("Enter a sentence: ");
    scanf("%[^\n]s",str);
    for (i = 0; str[i] != '\0'; i++)
    {
        if (str[i] >= 'a' && str[i] <= 'z')
        {
            str[i] = str[i] - 32; 
        } else if (str[i] >= 'A' && str[i] <= 'Z')
        {
            str[i] = str[i] + 32;  
        }
    }
    printf("Modified sentence: %s\n", str);
}

#include <stdio.h>
void main()
{
    char str[100], result[100];
    int i, j = 0;
    printf("Enter a string: ");
    scanf("%[^\n]s",str);
    for (i = 0; str[i] != '\0'; i++)
    {
        if ((str[i] >= 'A' && str[i] <= 'Z') || (str[i] >= 'a' && str[i] <= 'z'))
        {
            result[j] = str[i]; 
            j++;
        }
    }
    result[j] = '\0'; 
    printf("Filtered string: %s\n", result);
}

#include <stdio.h>
#include <string.h>
void main()
{
    char str[100];
    int freq[256] = {0}, i;
    printf("Enter a string: ");
    scanf("%[^\n]s",str);
    for (i = 0; str[i] != '\0'; i++)
    {
        freq[(unsigned char)str[i]]++;
    }
    printf("Character frequencies:\n");
    for (i = 0; i < 256; i++)
    {
        if (freq[i] > 0)
            printf("%c : %d\n", i, freq[i]);
    }
}

#include <stdio.h>
void main() 
{
    char str1[100], str2[100], combined[200];
    int i, j;
    printf("Enter first string: ");
    scanf("%[^\n]s",str1);
    printf("Enter second string: ");
    scanf("%[^\n]s",str2);
    for (i = 0; str1[i] != '\0'; i++)
        combined[i] = str1[i];
    for (j = 0; str2[j] != '\0'; j++, i++)
        combined[i] = str2[j];
    combined[i] = '\0';
    printf("Combined string: %s\n", combined);
}

#include <stdio.h>
#include <string.h>
void main()
{
    char str[200], word[50], maxWord[50], minWord[50];
    int i = 0, j, minLen = 100, maxLen = 0, len;

    printf("Enter a string: ");
    scanf("%[^\n]s",str);
    strcat(str, " "); 

    for (j = 0; str[j] != '\0'; j++) {
        if (str[j] != ' ') {
            word[i++] = str[j];
        } else {
            word[i] = '\0';
            len = strlen(word);
            if (len > maxLen) {
                maxLen = len;
                strcpy(maxWord, word);
            }
            if (len < minLen) {
                minLen = len;
                strcpy(minWord, word);
            }
            i = 0;
        }
    }

    printf("Smallest word: %s\n", minWord);
    printf("Largest word: %s\n", maxWord);
}
